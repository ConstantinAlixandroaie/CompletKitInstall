@page
@model CompletKitInstall.Pages.ContactModel
@{
}
<div class="container">
    <h2> Formular de contact </h2>
    <div class="card">
        <form class="m-2" method="post">
            <div>
                <label>Email</label>
            </div>
            <div class="m-2">
                <input class="form-control" asp-for="UserEmail" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div>
                <label>Subiect</label>
            </div>
            <div class="m-2">
                <input class="form-control" asp-for="EmailSubject" />
                <span asp-validation-for="EmailSubject" class="text-danger"></span>
            </div>
            <div>
                <label>Mesaj</label>
            </div>
            <div class="m-2">
                <textarea rows="10" class="form-control" asp-for="EmailBody"></textarea>
                <span asp-validation-for="EmailBody" class="text-danger"></span>
            </div>
            <div class="m-2">
                <button type="submit" class="btn-primary" value="Add"> Trimite </button>
            </div>
        </form>
    </div>
</div>