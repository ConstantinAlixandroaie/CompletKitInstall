@page "{qid?}"
@model CompletKitInstall.Pages.ProductModel
@{
}

@if (!Model.IsById)
{
<div class="container">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col col-md-3  my-1">
                <div class="card h-100">
                    <img class="card-img-top" src="~/@item.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <a href="/Product/@item.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}
else
{ 
    <div class="container">

        <div class="row">
            <h3>@Model.Product.Name</h3>
                <div class="col-5">
                    <div id="carosuelHomePage" class="carousel slide img-prod-slider" data-bs-ride="carousel" data-interval="false">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carosuelHomePage" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carosuelHomePage" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#carosuelHomePage" data-bs-slide-to="2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item  active">
                                <img class="d-block w-100 img-prod-slider" src="https://picsum.photos/id/237/500/600" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Slide 1</h5>
                                    <p>Descriere slide 1</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://picsum.photos/id/238/600/600" alt="Second slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Slide 2</h5>
                                    <p>Descriere slide 2</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://picsum.photos/id/239/600/600" alt="Third slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Slide 3</h5>
                                    <p>Descriere slide 3</p>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-target="#carosuelHomePage" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button type="button" class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-target="#carosuelHomePage" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-7">
                    <p>@Model.Product.Description</p>
                </div>
        </div>
    </div>

}